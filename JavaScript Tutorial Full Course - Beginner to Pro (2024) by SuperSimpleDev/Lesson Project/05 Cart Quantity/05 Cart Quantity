<body>  
  <p>Cart Quantity</p>
  <button onclick="showQ()"> Show Quanity </button>
  <button onclick="add1()"> Add to Cart </button>
  <button onclick="add2()"> +2 </button>
  <button onclick="add3()"> +3 </button>
  <button onclick="reset()"> Reset Cart </button>
  
<script>
    let q = 0;
    function showQ() {
      console.log('Cart quantity: ' + q);
    }
    function add1() {
      q += 1;
    }
    function add2(){
      q += 2;
    }
    function add3(){
      q += 3;
    }
    function reset(){
      q = 0;
    }
  </script>
</html>
