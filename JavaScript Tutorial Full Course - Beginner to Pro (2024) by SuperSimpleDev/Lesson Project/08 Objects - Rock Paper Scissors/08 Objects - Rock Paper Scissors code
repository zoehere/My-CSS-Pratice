<body>  
  <h1>Rock Paper Scissors</h1>
  <button onclick="rock()">Rock</button>
  <button onclick="paper()">Paper</button>
  <button onclick="scissors()">Scissors</button>
  <button onclick="reset()">Rest Score</button>
</body>
  <script>
    const computer = {
      wins: 0,
      losses: 0,
      ties: 0
    };

    let c;
    let result;

    function rock() {
      let com = Math.floor(Math.random() * 3);
      // let c;
      // let result;
      if (com == 0) {
        c = 'rock';
        result = 'Tie'
        computer.ties++;
      } else if (com == 1) {
        c = 'paper';
        result = 'You lose';
        computer.losses++;
      } else {
        c = 'scissors';
        result = 'You win';
        cmputer.wins++;
      }
      alert(`You picked rock. Computer picked ${c}. ${result}.\nWins: ${computer.wins}, Losses: ${computer.losses}, Ties: ${computer.ties}`);
    }
    function paper() {
      let com = Math.floor(Math.random() * 3);
      if (com == 0) {
        c = 'rock';
        result = 'You win'
        computer.wins++;
      } else if (com == 1) {
        c = 'paper';
        result = 'Tie';
        computer.ties++;
      } else {
        c = 'scissors';
        result = 'You lose';
        cmputer.losses++;
      }
      alert(`You picked paper. Computer picked ${c}. ${result}.\nWins: ${computer.wins}, Losses: ${computer.losses}, Ties: ${computer.ties}`);
    }
    function scissors() {
      let com = Math.floor(Math.random() * 3);
      if (com == 0) {
        c = 'rock';
        result = 'You lose'
        computer.losses++;
      } else if (com == 1) {
        c = 'paper';
        result = 'You win';
        computer.wins++;
      } else {
        c = 'scissors';
        result = 'Tie';
        cmputer.ties++;
      }
      alert(`You picked paper. Computer picked ${c}. ${result}.\nWins: ${computer.wins}, Losses: ${computer.losses}, Ties: ${computer.ties}`);
    }

    function reset() {
      computer.losses = 0;
      computer.wins = 0;
      computer.ties = 0;
    }
  </script>
</html>
